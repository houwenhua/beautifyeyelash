<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    
<hibernate-mapping>
	<class name="com.meijie.entity.SysUser" table="xt_user">
		<id name="id" type="java.lang.Integer" column="id">
			<generator class="identity"></generator>
		</id>
		<property name="name" column="name" length="50" not-null="true"></property>
		<property name="loginname" column="loginname" length="20" not-null="true"></property>
		<property name="password" column="password" length="50" not-null="true"></property>
		<property name="email" column="email" length="20" not-null="true"></property>
		<property name="jurisdiction" column="jurisdiction" length="15" not-null="true"></property>
		<property name="state" column="state" not-null="true"></property>
		<property name="storeid" column="storeid" not-null="true"></property>
	</class>
</hibernate-mapping>